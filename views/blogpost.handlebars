<section >
{{> blogpost-details blogPost}}
<section class="display-comments">
{{> comment-details blogPost}}
</section>

{{#if loggedIn}}
<form class="comment-form">
    <textarea class="comment-text" id="add-comment"></textarea>
    <button type="submit" class="add-comment-btn"> Add Comment </button>
</section>
</form>
{{else}}
<section class="not-logged-in">
    <h4><a href="/login"> Login </a> or <a href="/signup"> sign up </a> to leave a comment!</h4>
</section>
{{/if}}

<script src="/js/comment.js"></script>